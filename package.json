		"all-contributors-cli": "^6.16.1",
		"eslint": "^7.4.0",
		"eslint-config-bamboo": "^5.1.0",
		"jest": "^26.1.0",
		"jest-circus": "^26.1.0",
		"nyc": "^15.1.0",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.19",
		"ts-jest": "^26.1.1",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.6"
	},
